<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Level Select: Hyper Hacker</title>
    <script src="assets/js/level-select.js"></script>
</head>

<body>
    <div id="profile">
        <div id="profileContent">
            <img src="assets/media/defaultProfile.png" alt="profile">
            <h1>{{Username}}</h1>
            <h3>Joined On: {{dateJoined}}</h3>

            <div id="buttons">
                <button>Change Username</button>
                <button>Change Password</button>
                <button>Change Picture</button>
            </div>

            <div id="subscription">
                <h3>Upgrade To Hacker Status</h3>
                <p></p>
            </div>
        </div>


    </div>

    <nav>
        <h2>Welcome Back, {{username}}</h2>
        <img id="profile-toggle" src="assets/media/defaultProfile.png" alt="profile picture">
    </nav>

    <div id="levelContainer">
        <div id="levelGrid">
            {{#each levelNames}}
                <a href='/level?num={{@index}}'>
                    <div class="levelSelect">
                        <div class="highscore">
                            <h5>
                                {{lookup ../highscores @index}}
                            </h5>
                            <img src="assets/media/medal.png" alt="high score">
                        </div>
                        <div class="levelText">
                            <h3>Level {{@index}}</h3>
                            <h4>{{this}}</h4>
                        </div>
                    </div>
                </a>
            {{/each}}
        </div>
    </div>
</body>

</html>