<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Level Select: Hyper Hacker</title>
    <script src="assets/js/level-select.js"></script>
    <script src="assets/js/imageUpload.js"></script>
</head>

<body>
    <div id="profile">
        <div id="profileContent">
            <img src="assets/media/defaultProfile.png" alt="profile">
            <h1>{{Username}}</h1>
            <h3>Joined On: {{dateJoined}}</h3>

            <div id="buttons">
                <button id="change-username">Change Username</button>
                <button id="change-password">Change Password</button>
                <button id="picture">Change Picture</button>
                <button><a href="/logout">Log Out</a></button>
            </div>

            {{#unless isPremium}}
                <button id="upgrade">Upgrade To Hacker Status</button>
            {{/unless}}

        </div>
    </div>

    <input id="_csrf" type="hidden" name="_csrf" value={{csrfToken}} />


    <nav>
        <div>
            <h2>Welcome Back, {{username}}</h2>
        </div>
        <img id="profile-toggle" src="assets/media/defaultProfile.png" alt="profile picture">
    </nav>

    <div id="levelContainer">
        <div id="levelGrid">
            {{#each levels}}
                {{#if this.isPremium }}
                    {{#if ../isPremium }}
                <a href='/level?num={{@index}}'>
                    {{else}}
                <a class="locked-level" />
                    {{/if}}
                {{else}}
                <a href='/level?num={{@index}}'>
                {{/if}}
                    <div class="levelSelect">
                        <div class="highscore">
                            <h5>
                                {{lookup ../highscores @index}}
                            </h5>
                            <img src="assets/media/medal.png" alt="high score">
                        </div>
                        <div class="levelText">
                            <h3>Level {{@index}}</h3>
                            <h4>{{this.name}}</h4>
                        </div>
                    </div>
                </a>
            {{/each}}
        </div>
    </div>
</body>

</html>